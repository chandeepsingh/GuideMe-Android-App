<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
   <com.google.android.maps.MapView
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:apiKey="0sB52_Tbz1OoY7bwxZYIVCU_stzBQFFqfsF2gNw"
    android:id="@+id/mvMain"
    android:visibility="visible"
 	style="@style/mapView"/>
   
   <Button android:id="@+id/googlemaps_select_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="@string/button_location"
            android:textStyle="bold"
   			android:onClick="locateMe"
   			/>
   
      <Button android:id="@+id/find_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/button_findPlaces"
            android:textStyle="bold"
   			android:onClick="findPlaces"/>
      
      <!--  android:layout_centerInParent="true" 
            android:background="#C0C0C0"-->
        
 </RelativeLayout>
