<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/label_startAdd" />
    
    <EditText android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/label_endAdd" 
        android:layout_marginTop="50dip"/>
    
        <EditText android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/label_directions" 
        android:layout_marginTop="100dip"/>
    
    <TextView
        android:id="@+id/startAddval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:text="Start Address" />

    <TextView
        android:id="@+id/endAddval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" 
        android:layout_alignParentTop="true"      
        android:layout_marginLeft="70dp"
        android:layout_marginTop="60dp"
        android:text="End Address" />
    
        <Button
        android:layout_width="1000dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="275dip"
        android:layout_weight="1"
        android:text="@string/button_visualRoute" 
        android:onClick="visualRoute"/>
        
                <ImageView
        android:id="@+id/imageView1"
        android:contentDescription="@string/img_guideme"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="375dip"
        android:src="@drawable/img_guideme" />


</RelativeLayout>

